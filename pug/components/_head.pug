block variables 

mixin head()
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description" content= project.pages[currentPage].description)
    title= project.title + " | " + project.pages[currentPage].title
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap" rel="stylesheet")
    link(rel="icon" type="image/png" href="favicons/favicon-96x96.png" sizes="96x96")
    link(rel="icon" type="image/svg+xml" href="favicons/favicon.svg")
    link(rel="shortcut icon" href="/favicon.ico")
    link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
    meta(name="apple-mobile-web-app-title" content="Positivus")
    link(rel="manifest" href="/site.webmanifest")
    block styles 
      each styles in project.pages[currentPage].css 
        link(rel="stylesheet", href= styles)
    block generalCss  
      each styles in project.generalCss 
        link(rel="stylesheet", href= styles)
    block scripts 
      each scripts in project.pages[currentPage].js 
        script(src= scripts)
    block generalJs  
      each scripts in project.generalJs
        script(src= scripts)